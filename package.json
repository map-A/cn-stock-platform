{
  "name": "cn-stock-platform",
  "version": "1.0.0",
  "description": "中国A股分析平台 - 基于 React 18 + Umi 4 + Ant Design 5",
  "private": true,
  "scripts": {
    "dev": "umi dev",
    "build": "umi build",
    "preview": "umi preview",
    "postinstall": "umi setup",
    "setup": "umi setup",
    "start": "npm run dev",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx src",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "vitest",
    "test:e2e": "playwright test",
    "prepare": "husky install"
  },
  "dependencies": {
    "@ant-design/icons": "^5.5.1",
    "@ant-design/pro-layout": "^7.21.1",
    "@antv/g2plot": "^2.4.32",
    "@tanstack/react-query": "^5.59.0",
    "@umijs/max": "^4.5.2",
    "ahooks": "^3.8.1",
    "antd": "^5.21.6",
    "antm": "^0.0.0",
    "dayjs": "^1.11.13",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.545.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "umi": "^4.3.24",
    "umi-request": "^1.4.0",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@ant-design/plots": "^2.6.5",
    "@ant-design/pro-components": "^2.7.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@playwright/test": "^1.48.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.7.9",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@umijs/fabric": "^4.0.1",
    "@umijs/plugins": "^4.5.2",
    "date-fns": "^4.1.0",
    "eslint": "^8.57.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.3",
    "stylelint": "^16.10.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
